 
<nacm xmlns="urn:ietf:params:xml:ns:yang:ietf-netconf-acm">
<enable-nacm>true</enable-nacm> 
<read-default>deny</read-default> 
<write-default>deny</write-default> 
<exec-default>permit</exec-default> 
<enable-external-groups>false</enable-external-groups> 
<groups> 
<group> 
<name>TruststoreAdmin</name> 
<user-name>TruststoreAdminRole</user-name> 
</group> 
</groups>
<rule-list>
<name>rule1</name>
<group>*</group>
<rule>
<name>allow-nt1-name</name>
<path xmlns:ts="urn:ietf:params:xml:ns:yang:ietf-truststore">/ts:truststore</path>
<access-operations>read</access-operations> 
<action>permit</action>
</rule>
</rule-list>
<rule-list>
<name>rule2</name>
<group>TruststoreAdmin</group>
<rule>
<name>allow-nt1-num</name>
<path xmlns:ts="urn:ietf:params:xml:ns:yang:ietf-truststore">/ts:truststore</path>
<access-operations>create update delete</access-operations>
<action>permit</action>
</rule>
</rule-list>
</nacm>
